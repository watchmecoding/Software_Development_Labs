@model List<lab11.Models.PerfumeWithTypeViewModel>

@{
    ViewBag.Title = "Perfume List";
}

<h2>Perfume List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Company</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PerfumeID</td>
                <td>@item.PerfumeName</td>
                <td>@item.VolumeName</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.PerfumeID })
                    @Html.ActionLink("Edit", "Edit", new { id = item.PerfumeID})
                </td>
                <td>
                    @using (Html.BeginForm("DeleteConfirmed", "Home", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.PerfumeID)
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this plant?')">Delete</button>
                    }
                </td>
            </tr>
        }
        @Html.ActionLink("Create", "Create")
    </tbody>
</table>






